# Variables d'environnement pour le PoC d'analyse de documents juridiques

# Clés API pour les fournisseurs de LLM
GROQ_API_KEY=votre_cle_api_groq
OPENAI_API_KEY=votre_cle_api_openai
ANTHROPIC_API_KEY=votre_cle_api_anthropic

# Configuration du fournisseur LLM par défaut (groq, openai, anthropic)
LLM_PROVIDER=groq

# Configuration MongoDB
MONGODB_URI=mongodb://mongodb:27017/legal_analyzer
MONGODB_USER=admin
MONGODB_PASSWORD=password_securise

# Configuration Redis
REDIS_URI=redis://redis:6379/0
REDIS_PASSWORD=password_securise

# Configuration Qdrant
QDRANT_URI=http://qdrant:6333

# Configuration de l'API
API_PORT=8000
API_HOST=0.0.0.0
DEBUG_MODE=false
LOG_LEVEL=info

# Limites de téléchargement de fichiers
MAX_UPLOAD_SIZE=10485760  # 10 Mo en octets

# Configuration de sécurité
JWT_SECRET=votre_secret_jwt_tres_securise
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600  # en secondes

# Configuration des workflows
PARALLEL_TASKS=4  # Nombre de tâches parallèles maximum
EVALUATION_THRESHOLD=0.75  # Seuil de qualité pour l'évaluateur
